- let breadcrumb = ["Главная", "Расчет дистанции распознавания для видеонаблюдения заказать в Туле по выгодной цене от «ТТ-ГРУПП»"];
section.page-top.page-top_grey
  .container 
    .page-top__content
      +breadcrumbs(breadcrumb)
      h1 Расчет дистанции распознавания для видеонаблюдения заказать в Туле по выгодной цене от «ТТ-ГРУПП»
section.calculator 
  .container 
    .calculator__wrapper.calculator__wrapper_dist
      .calculator__item
        label Тип камеры
        .calculator__field.calculator__field_select
          select.type_camera
            option(value="1.1") IP
            option(value="1") AHD
          .select-btn
      .calculator__item
        label Разрешение
        .calculator__field.calculator__field_select
          select.raz
            option(value="1.3") 960H (960*576)
            option(value="1.781") 1 МП (1280*720)
            option(value="2.73") 2 МП (1920*1080)
            option(value="2.912") 3 МП (2048*1536)
          .select-btn
      .calculator__item
        label Размер матрицы
        .calculator__field.calculator__field_select
          select.matrix
            option(value="2.54") 1/4”
            option(value="3.39") 1/3”
            option(value="3.63") 1/ 2.8”
            option(value="3.76") 1/ 2.7”
          .select-btn
      .calculator__item
        label Фокусное расстояние объектива (через ".")
        .calculator__field
          .minus
          input.focus(placeholder="Введите значение" min="1" type="text")
          .plus
      .calculator__item
        label Объект
        .calculator__field.calculator__field_select
          select.object
            option(value="0.25") Лицо человека
            option(value="0.1") Автомобильный номер
            option(value="1") Крупный объект (1,5-2 м в высоту)
          .select-btn
      .calculator__item
        label Зоны детализации
        .calculator__field.calculator__field_select
          select.object_detail
            option(value="5") Мониторинг
            option(value="10") Обнаружение
            option(value="27") Наблюдение
            option(value="50") Узнавание
            option(value="100") Идентификация
          .select-btn
      .calculator__item.calculator__item_result
        .calculator__field
          label Расстояние
          span.itog-item
            span.itog 0.00 
            | м.
+js('main/distance-calc.js')
include ../callback